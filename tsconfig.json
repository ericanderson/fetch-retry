{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "node16",
        "target": "ES2020",
        "noImplicitAny": true,
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "outDir": "dist/mjs",
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "index.mts"
    ]
}